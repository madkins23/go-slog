<html lang="en">
<head>
  <title>Benchmark Data</title>
  <link rel="stylesheet" href="/go-slog/style.css">
  <script src="/go-slog/scripts.js"></script>
</head>

<body>
<div class="wrapper">
  <div class="header">
    {{ template "partHeader" dict "top" $ "title" "Warnings" }}
  </div>
  <div class="content">
    <div>
      <table class="top">
        <tr>
          <td colspan=2 class="center">
            <table class="warning">
              <tr>
                <td style="width:3%;"></td>
                <td style="width:3%;"></td>
                <td style="width:30%;"></td>
                <td style="width:64%;"></td>
              </tr>
              {{ range $level := .Levels }}
                <tr>
                  <td colspan=4 class="level">{{ $level }}</td>
                </tr>
                <tr>
                  <td></td>
                  <td colspan=3>{{ $level.Summary }}</td>
                </tr>
                {{ range $warning := $level.Warnings }}
                  <tr>
                    <td></td>
                    <td colspan=2 class="warning">{{ $warning.Name }}</td>
                    <td class="extra">{{ $warning.Summary }}</td>
                  </tr>
                  {{ if $warning.HasDescription }}
                    <tr>
                      <td colspan=2></td>
                      <td colspan=2 class="description">{{ $warning.Description }}</td>
                    </tr>
                  {{ end }}
                  {{ $warnData := $.Warnings.FindWarning $warning.Name }}
                  {{ if $warnData.HasUsage }}
                    <tr>
                      <td colspan=2></td>
                      <td colspan=2>
                        <table class="warning-data">
                          <tr>
                            {{ if $warnData.HasHandlers }}
                              <th style="width:45%;">Handlers</th>
                            {{ end }}
                              <th style="width:10%;"></th>
                            {{ if $warnData.HasTests }}
                              <th style="width:45%;">Tests</th>
                            {{ end }}
                          </tr>
                          <tr>
                            <td class="fixed">
                              <ul>
                                {{ range $hdl := $warnData.Handlers }}
                                  <li>{{ $hdl.Name }}</li>
                                {{ end }}
                              </ul>
                            </td>
                            <th></th>
                            <td>
                              <ul>
                                {{ range $test := $warnData.Tests }}
                                  <li>{{ $test.Name }}</li>
                                {{ end }}
                              </ul>
                            </td>
                          </tr>
                        </table>
                      </td>
                    </tr>
                  {{ end }}
                {{ end }}
              {{ end }}
            </table>
          </td>
        </tr>
        <tr><td colspan=2><hr/></td></tr>
        <tr>
          <td colspan=2><h2>Warnings vs. Handlers</h2></td>
        </tr>
        <tr>
          <td colspan=2 class="center">
            <table class="handler-v-warning">
              <tr>
                <td colspan=2></td>
                {{ range $handler := .Warnings.HandlerTags }}
                  <th><div><span>{{ $.Warnings.HandlerName $handler }}</span></div></th>
                {{ end }}
              </tr>
              {{ range $level := .Levels }}
                <tr><td colspan=2 class="level">{{ $level }}</td></tr>
                {{ range $warning := $level.Warnings }}
                  <tr>
                    <td style="width:5%;"></td>
                    <td class="name">{{ $warning.Name }}</td>
                    {{ range $handler := $.Warnings.HandlerTags }}
                      {{ $count := $.Warnings.HandlerWarningCount $handler $warning }}
                      {{ if gt $count 0 }}
                        <td class="count"><span>{{ $.Warnings.HandlerWarningCount $handler $warning }}</span></td>
                      {{ else }}
                        <td class="blank"></td>
                      {{ end }}
                    {{ end }}
                  </tr>
                {{ end }}
              {{ end }}
            </table>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="footer">
    {{ template "partFooter" $ }}
  </div>
</div>
</body>
</html>