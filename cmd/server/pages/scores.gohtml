<html lang="en">
<head>
    <title>Handler Scores</title>
    <link rel="stylesheet" href="/go-slog/style.css">
    <script src="/go-slog/scripts.js"></script>
</head>

<body>
<div class="wrapper">
    <div class="header">
        {{ template "partHeader" dict "top" $ "title" "Handler Scores" }}
    </div>
    <div class="content">
        <div>
            <table class="top">
                <tr class="title"><td colspan="2"><h2>{{ .Keeper.Title }}</h2></td></tr>

                {{/* Score Keeper Data Tables */}}

                {{/* Score Keeper Data Table Choices */}}
                <tr class="title">
                    <td colspan="2">
                        <table class="score-buttons">
                            <tr>
                                <td>
                                    <button id="score-button-scores" type="button" onclick="showDataTable(`scores`)">Scores</button>
                                </td>
                                <td class="right">
                                    <button id="score-button-micros" type="button" onclick="showDataTable(`micros`)">Micros</button>
                                    Memory:
                                    <button id="score-button-allocs" type="button" onclick="showDataTable(`allocs`)">Allocs</button>
                                    <button id="score-button-bytes" type="button" onclick="showDataTable(`bytes`)">Bytes</button>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        {{/* Score Keeper Data Table: SCORES */}}
                        <table class="data" id="score-table-scores">
                            <tr>
                                <th>Handler</th>
                                <th>{{ $.Keeper.X.Name }}</th>
                                <th>{{ $.Keeper.Y.Name }}</th>
                            </tr>
                            {{ range $hdlr := .Keeper.HandlerTags }}
                                <tr>
                                    <td><a href="/go-slog/handler/{{ $hdlr }}.html">{{ $.Benchmarks.HandlerName $hdlr }}</a></td>
                                    <td class="number">{{ $.FixValue ($.Keeper.X.ScoreFor $hdlr) 2 }}</td>
                                    <td class="number">{{ $.FixValue ($.Keeper.Y.ScoreFor $hdlr) 2 }}</td>
                                </tr>
                            {{ end }}
                        </table>
                        {{/* Score Keeper Data Table: MICROS / Operation */}}
                        <table class="data" id="score-table-micros">
                            <tr>
                                <th>
                                    <div class="corner-top-right">Tests →</div>
                                    <div class="corner-bottom-left">↓Handlers</div>
                                </th>
                                {{ range $test := .Benchmarks.TestTags }}
                                    <td class="center">{{ $test.Name }}</td>
                                {{ end }}
                            </tr>
                            {{ range $hdlr := .Keeper.HandlerTags }}
                                <tr>
                                    <td><a href="/go-slog/handler/{{ $hdlr }}.html">{{ $.Benchmarks.HandlerName $hdlr }}</a></td>
                                    {{ $testMap := $.Benchmarks.TestRecordsFor $hdlr }}
                                    {{ range $test := $.Benchmarks.TestTags }}
                                        {{ $data := index $testMap $test }}
                                        <td class="number">{{ $.FixFloat (div $data.NanosPerOp 1000.0) 3 }}</td>
                                    {{ end }}
                                </tr>
                            {{ end }}
                        </table>
                        {{/* Score Keeper Data Table: Memory ALLOCS */}}
                        <table class="data" id="score-table-allocs">
                            <tr>
                                <th>
                                    <div class="corner-top-right">Tests →</div>
                                    <div class="corner-bottom-left">↓Handlers</div>
                                </th>
                                {{ range $test := .Benchmarks.TestTags }}
                                    <td class="center">{{ $test.Name }}</td>
                                {{ end }}
                            </tr>
                            {{ range $hdlr := .Keeper.HandlerTags }}
                                <tr>
                                    <td><a href="/go-slog/handler/{{ $hdlr }}.html">{{ $.Benchmarks.HandlerName $hdlr }}</a></td>
                                    {{ $testMap := $.Benchmarks.TestRecordsFor $hdlr }}
                                    {{ range $test := $.Benchmarks.TestTags }}
                                        {{ $data := index $testMap $test }}
                                        <td class="number">{{ $data.MemAllocsPerOp }}</td>
                                    {{ end }}
                                </tr>
                            {{ end }}
                        </table>
                        {{/* Score Keeper Data Table: Memory BYTES */}}
                        <table class="data" id="score-table-bytes">
                            <tr>
                                <th>
                                    <div class="corner-top-right">Tests →</div>
                                    <div class="corner-bottom-left">↓Handlers</div>
                                </th>
                                {{ range $test := .Benchmarks.TestTags }}
                                    <td class="center">{{ $test.Name }}</td>
                                {{ end }}
                            </tr>
                            {{ range $hdlr := .Keeper.HandlerTags }}
                                <tr>
                                    <td><a href="/go-slog/handler/{{ $hdlr }}.html">{{ $.Benchmarks.HandlerName $hdlr }}</a></td>
                                    {{ $testMap := $.Benchmarks.TestRecordsFor $hdlr }}
                                    {{ range $test := $.Benchmarks.TestTags }}
                                        {{ $data := index $testMap $test }}
                                        <td class="number">{{ $data.MemBytesPerOp }}</td>
                                    {{ end }}
                                </tr>
                            {{ end }}
                        </table>
                        <p class="center" id="score-table-caption"></p>
                    </td>
                </tr>
                <tr><td colspan="2"><hr/></td></tr>

                {{/* Score Keeper Charts */}}

                <tr class="title"><td colspan="2"><h2>Score Visualization</h2></td></tr>
                <tr>
                    <td colspan="2">
                        <table class="charts">
                            <colgroup>
                                <col class="size-left" width="40%">
                                <col class="size-center" width="20%">
                                <col class="size-right" width="40%">
                            </colgroup>
                            <tr>
                                <td>
                                    <button id="score-chart-button-0" type="button" onclick="scoreChartSize(0)">Full Size</button>
                                </td>
                                <td class="center">&larr; Chart Size &rarr;</td>
                                <td class="right">
                                    Top Right:
                                    <button id="score-chart-button-1" type="button" onclick="scoreChartSize(1)">3/4</button>
                                    <button id="score-chart-button-2" type="button" onclick="scoreChartSize(2)">Half</button>
                                    <button id="score-chart-button-3" type="button" onclick="scoreChartSize(3)">Quarter</button>
                                </td>
                            </tr>
                            <tr>
                                <td class="image" colspan="3">
                                    <img id="score-chart-image-0" src="/go-slog/scores/{{ .Keeper.Tag }}/0/chart.svg" alt="Handler Scoring" class="chart" />
                                    <img id="score-chart-image-1" src="/go-slog/scores/{{ .Keeper.Tag }}/1/chart.svg" alt="Handler Scoring" class="chart" />
                                    <img id="score-chart-image-2" src="/go-slog/scores/{{ .Keeper.Tag }}/2/chart.svg" alt="Handler Scoring" class="chart" />
                                    <img id="score-chart-image-3" src="/go-slog/scores/{{ .Keeper.Tag }}/3/chart.svg" alt="Handler Scoring" class="chart" />
                                </td>
                            </tr>
                        </table>
                        <p class="center">{{ .Keeper.ChartCaption }}</p>
                    </td>
                </tr>
                <tr><td colspan="2"><hr/></td></tr>

                {{/* Score Keeper Algorithm Documentation */}}

                <tr class="title">
                    <td colspan="2">
                        <h2 id="scoring_algorithms">Scoring Algorithms</h2>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        {{ .Keeper.Overview }}
                    </td>
                </tr>
                <tr><td colspan="2"><hr class="thin"/></td></tr>
                <tr>
                    <td colspan="2">
                        <h3 class="doc">Score Keeper: <span class="fixed">{{ .Keeper.Name }}</span></h3>
                        {{ .Keeper.Summary }}
                    </td>
                </tr>
                <tr><td colspan="2"><hr class="thin"/></td></tr>
                <tr>
                    <td class="top">
                        <h3 class="doc">X Axis: <span class="fixed">{{ .Keeper.X.Name }}</span></h3>
                        {{ .Keeper.X.Summary }}
                    </td>
                    <td class="top">
                        {{ range $exhibit := .Keeper.X.Exhibits }}
                            {{ $exhibit.HTML $exhibit }}
                        {{ end }}
                    </td>
                </tr>
                <tr><td colspan="2"><hr class="thin"/></td></tr>
                <tr>
                    <td class="top">
                        <h3 class="doc">Y Axis: <span class="fixed">{{ .Keeper.Y.Name }}</span></h3>
                        {{ .Keeper.Y.Summary }}
                    </td>
                    <td class="top">
                        {{ range $exhibit := .Keeper.Y.Exhibits }}
                            {{ $exhibit.HTML $exhibit }}
                        {{ end }}
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="footer">
        {{ template "partFooter" $ }}
    </div>
</div>
<script>
    function scoreChartSize(size) {
        for (let i = 0; i < 4; i++) {
            document.getElementById(`score-chart-button-${i}`).disabled = i === size
            document.getElementById(`score-chart-image-${i}`).hidden = i !== size
        }
    }
    scoreChartSize(0);

    const tables = [
        {
            "ID":      "scores",
            "Name":    "Scores",
            "Caption":
                "Scores are on scale of <code>0..100</code>. Higher is better.<br/>" +
                "Metrics algorithms completely made up out of thin air.<br/>" +
                "See <a href='#scoring_algorithms'>notes below</a> for details."
        },
        {
            "ID":      "micros",
            "Name":    "Micros",
            "Caption": "Numbers represent microseconds per operation. Lower is better",
        },
        {
            "ID":      "allocs",
            "Name":    "Allocs",
            "Caption": "Numbers represent number of memory allocations per operation. Lower is better.",
        },
        {
            "ID":      "bytes",
            "Name":    "Bytes",
            "Caption": "Numbers represent bytes of memory allocated per operation. Lower is better.",
        }
    ]
    function showDataTable(which) {
        document.getElementById(`score-table-caption`).innerHTML = ''
        for (const table of tables) {
            let buttonDisabled = false
            let tableMode = `none`
            if (which === table.ID) {
                buttonDisabled = true
                if (table.Caption !== undefined) {
                    document.getElementById(`score-table-caption`).innerHTML = table.Caption
                }
                tableMode = `table`
            }
            document.getElementById(`score-button-`+table.ID).disabled = buttonDisabled
            displayTable('score-table-' +table.ID, tableMode)
        }
    }
    showDataTable("scores")
</script>
</body>
</html>
