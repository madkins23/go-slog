<html>
<head>
  <title>Benchmark Data</title>
  <link rel="stylesheet" href="/style.css">
</head>

<body>
<table class="top">
  <tr>
    <td>
      <h1>Test {{ .Data.TestName .Test }}</h1>
    </td>
    <td align="right">
      {{ template "choices" $ }}
    </td>
  </tr>
  <tr>
    <td colspan=2 align="center">
      <table class="data">
        <tr>
          <th>Handler</th>
          <th>Runs</th>
          <th>Ns/Op</th>
          <th>Allocs/Op</th>
          <th>Bytes/Op</th>
          <th>MB/Sec</th>
        </tr>
        {{ range $tag, $record := .Data.HandlerRecords .Test }}
          <tr>
            <td>{{ $.Data.HandlerName $tag }}</td>
            <td class="number">{{ $record.Iterations }}</td>
            <td class="number">{{ printf "%0.2f" $record.NanosPerOp }}</td>
            <td class="number">{{ $record.MemAllocsPerOp }}</td>
            <td class="number">{{ $record.MemBytesPerOp }}</td>
            <td class="number">{{ $record.MemMbPerSec }}</td>
          </tr>
        {{ end }}
      </table>
    </td>
  </tr>
  <tr>
    <td colspan=2>
      <table>
        <tr>
          <td><img src="chart.svg?tag={{ .Test }}&item=Nanos" alt="{{ .Data.TestName .Test }} Ns/Op" /></td>
          <td><img src="chart.svg?tag={{ .Test }}&item=MemAllocs" alt="{{ .Data.TestName .Test }} Allocs/Op" /></td>
        </tr>
        <tr>
          <td><img src="chart.svg?tag={{ .Test }}&item=MemBytes" alt="{{ .Data.TestName .Test }} Bytes/Op" /></td>
          <td><img src="chart.svg?tag={{ .Test }}&item=MemMB" alt="{{ .Data.TestName .Test }} MB/Sec" /></td>
        </tr>
      </table>
    </td>
  </tr>
</table>
</body>
</html>
